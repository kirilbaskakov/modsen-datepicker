{
  "compilerOptions": {
    "target": "ESNext", 
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "module": "ES6",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
    },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}